<div class="jumbotron subhead" id="overview">
  
	<% if @new_group %>
	<p>El grupo <%=@new_group.name%> ha sido creado exitosamente</p>
	<% end %>
  
	<h2>Grupos</h2>
  
  	<div class="well centerlogin">
		<% if (@list != nil) && !(@list.empty?) %>
		<ul>
			<% @list.each do |group| %>
			<li><%=group.name %>
	      		<input class ="btn" type="button" id="<%=group.name%>" onClick="document.location = 'task?group_id=<%=group.id %>'" value="ver" />
	    	</li>
			<% end %>
	    </ul>
	  	<% else %>
	        <p>No tienes grupos creados</p>  
	  	<% end %>
	
	  	<div class="actions">
			<a href="group_create" class="btn btn-inverse" id="viewPendingTasksButton">Crear nuevo grupo</a>
			<a href="pending" class="btn" id="viewPendingTasksButton">Ver tareas pendientes</a>
		</div>
	</div>
</div>
	

